<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/common_top_bar" />

    <FrameLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:layout_width="780dp"
        android:layout_height="330dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/home_logo" />

    <LinearLayout
        android:id="@+id/ll_home_btn"
        android:layout_width="738dp"
        android:layout_height="94dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_btn_aboutus"
            android:layout_width="198dp"
            android:layout_height="94dp"
            android:background="@drawable/home_btn_gywm_nor" />

        <Button
            android:id="@+id/home_btn_moduleproduct"
            android:layout_width="198dp"
            android:layout_height="94dp"
            android:layout_marginLeft="94dp"
            android:background="@drawable/home_btn_mkhcp_nor" />

        <Button
            android:id="@+id/home_btn_hallcase"
            android:layout_width="198dp"
            android:layout_height="94dp"
            android:layout_marginLeft="72dp"
            android:background="@drawable/home_btn_ytys_nor" />

    </LinearLayout>
</LinearLayout>