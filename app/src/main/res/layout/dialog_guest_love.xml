<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_guest_love_back"
            android:layout_width="30dp"
            android:layout_marginLeft="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_back_nor" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp"
            android:textSize="18sp"
            android:textColor="#0f5099"
            android:layout_gravity="center"
            android:text="我喜欢"/>
        <Button
            android:id="@+id/btn_guest_love_qrcode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="300dp"
            android:background="@drawable/btn_qrcode_nor" />

        <Button
            android:id="@+id/btn_guest_love_save"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/detail_btn_save_nor" />

        <Button
            android:id="@+id/btn_guest_love_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_share_nor" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_guest_love"
        android:text="暂无内容"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/topBarTextOnClickColor"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_guest_love"
        android:layout_width="840dp"
        android:layout_marginLeft="60dp"
        android:layout_height="match_parent"/>
</LinearLayout>
