<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2D39"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="160dp"
        android:background="#1A1A1A"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/menu0_our"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menu_selected">
            <ImageView
                android:id="@+id/img0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_sidebar_gywm_sel"/>
            <TextView
                android:id="@+id/pMenu_txt0"
                android:textColor="@color/personal_menu_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img0"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu1_our"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_sidebar_falj_nor"/>
            <TextView
                android:id="@+id/pMenu_txt1"
                android:textColor="@color/personal_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img1"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/menu2_our"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_sidebar_cgal_nor"/>
            <TextView
                android:id="@+id/pMenu_txt2"
                android:textColor="@color/personal_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img2"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/menu3_our"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/icon_sidebar_jjfa_nor"/>
            <TextView
                android:id="@+id/pMenu_txt3"
                android:textColor="@color/personal_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img3"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=""/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu4_our"
            android:visibility="gone"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp" />
            <TextView
                android:id="@+id/pMenu_txt4"
                android:textColor="@color/personal_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img4"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="模块化产品"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menu5_our"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp" />
            <TextView
                android:id="@+id/pMenu_txt5"
                android:textColor="@color/personal_text_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img5"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="一厅一案"/>
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/menu6_our"
            android:paddingTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@drawable/button_unselect"
            android:textColor="@color/white"
            android:text="一厅一案"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Switch_layout4Our"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:background="@drawable/bg"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0F5099"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:text="关于我们"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/mkOryy_layout"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/personal_text_color"
                android:text="解决方案 >"/>
            <TextView
                android:id="@+id/mkOryy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/personal_menu_text_color"
                android:text="一厅一案"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="760dp"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="60dp">
            <com.huashe.pizz.other.util.VerticalViewPager
                android:layout_weight="9"
                android:id="@+id/viewPager"
                android:overScrollMode="never"
                android:layout_width="720dp"
                android:paddingRight="40dp"
                android:layout_height="450dp"/>
            <LinearLayout
                android:id="@+id/dian_layout"
                android:padding="3dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:background="#00000000"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/dian1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian"/>
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/dian2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
                <ImageView
                    android:id="@+id/dian3"
                    android:layout_marginBottom="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/dian4"
                    android:layout_marginBottom="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/dian5"
                    android:layout_marginBottom="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/dian6"
                    android:layout_marginBottom="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/dian7"
                    android:layout_marginBottom="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/dian_hei"/>
            </LinearLayout>
        </FrameLayout>


    </RelativeLayout>




</LinearLayout>