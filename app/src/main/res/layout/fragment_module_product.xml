<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/lv_moduleproduct_menu"
        android:layout_width="160dp"
        android:background="#000000"
        android:layout_height="match_parent"
        android:divider="@null"/>

    <LinearLayout
        android:id="@+id/layout_moduleproduct_girdlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_moduleproduct_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="智电家庭与国网商城"
            android:textColor="#0f5099"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_moduleproduct_girdlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarSize="10dp"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideInset"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp" />
    </LinearLayout>
    <include layout="@layout/layout_moduleproduct_detail"
        android:id="@+id/layout_moduleproduct_detail"
        android:visibility="gone"/>
</LinearLayout>