<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="#2b2c2d"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_guest_love"
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp" />

        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="102dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guest_love_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="智电家庭+国网商城"
                android:textColor="#c4c8cc"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_guest_love_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="的点点滴滴多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多"
                android:textColor="#939699"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_guest_love_delete"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/list_btn_delete_nor" />
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>