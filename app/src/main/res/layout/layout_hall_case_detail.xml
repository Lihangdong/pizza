<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_hall_case_detail"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_hall_case_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_back_nor" />

        <TextView
            android:id="@+id/tv_hall_case_detail_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/topBarTextOnClickColor"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hall_case_detail"
        android:layout_width="695dp"
        android:scrollbars="vertical"
        android:scrollbarSize="10dp"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/vertical_line"
        android:scrollbarStyle="outsideInset"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"/>
</LinearLayout>