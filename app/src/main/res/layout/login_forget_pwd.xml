<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="360dp"
    android:layout_height="270dp"
    android:background="#99000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#1777e6"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码"/>


        <RelativeLayout
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/number_txt"
                android:layout_width="@dimen/login_boxlay_width"
                android:layout_height="@dimen/login_boxlay_height"
                android:layout_centerHorizontal="true">

                <EditText
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:id="@+id/user_phone_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_edit_height"
                    android:hint="请输入手机号"
                    android:textColor="@color/white"
                    android:textColorHint="#7a7d80"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/edit_box_selector"/>
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/login_imag_box_HeightAndWidth"
                    android:layout_height="@dimen/login_imag_box_HeightAndWidth"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_login_user_nor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Yanzheng_number"
                android:layout_below="@+id/number_txt"
                android:layout_marginTop="15dp"
                android:layout_width="@dimen/login_boxlay_width"
                android:layout_height="@dimen/login_boxlay_height"
                android:layout_centerHorizontal="true">


                <EditText
                    android:id="@+id/Yanzhengma_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="50dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:hint="请输入验证码"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textColorHint="#7a7d80"
                    android:background="@drawable/edit_box_selector"/>
                <Button
                    android:layout_toRightOf="@+id/Yanzhengma_txt"
                    android:id="@+id/getYz_number"
                    android:layout_marginLeft="10dp"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ready_submit_button"
                    android:text="获取验证码"/>
                <ImageView
                    android:id="@+id/yzm_img"
                    android:layout_width="@dimen/login_imag_box_HeightAndWidth"
                    android:layout_height="@dimen/login_imag_box_HeightAndWidth"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_login_sryzm_nor"/>
            </RelativeLayout>

            <Button
                android:id="@+id/forget_next_button"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:layout_width="@dimen/login_boxlay_width"
                android:layout_height="@dimen/login_denglu_button_height"
                android:textColor="@color/button_unsubmit"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_button_blue_shape"
                android:text="下一步"
                />


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>